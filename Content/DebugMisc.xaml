<UserControl x:Class="AusTacQuick2Launch.Content.DebugMisc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Debug Misc Info (from Registry)" Style="{StaticResource Heading2}" Margin="0,0,0,5" />
                <Separator Background="#FF5D5C5C" Margin="0,0,0,10" />
                <TextBlock x:Name="steamdir" Margin="0,0,0,10"/>
                <Separator Background="#FF5D5C5C" Margin="0,0,0,10" />
                <TextBlock x:Name="ArmA2OAValue" Margin="0,0,0,10" />
                <Separator Background="#FF5D5C5C" Margin="0,0,0,10" />
                <TextBlock x:Name="ArmA3Value" Margin="0,0,0,10"/>
                <Separator Background="#FF5D5C5C" Margin="0,0,0,10" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
